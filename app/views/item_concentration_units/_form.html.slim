.col-md-12
  .modal.fade.custom-width id=("item_concentration_unit_modal_#{item_concentration_unit.id}") 
	.modal-dialog
	  .modal-content
		.modal-header
		  button.close aria-hidden="true" data-dismiss="modal" type="button"  &times;
		  h4.modal-title Item Concentration Unit
		.modal-body
		  = bootstrap_form_for(item_concentration_unit, :class => "form-horizontal form-groups-bordered", :remote => true) do |f|
			.errors
			= f.text_field :name
			= f.text_area :description
			= submit_button_tag(f.object)