.row
	.col-lg-12
		.panel.panel-default
			.panel-heading
				| Users
				.panel-actions
					a href="#{new_user_registration_path}" 
						i.fa.fa-plus.fa-2x
					a href="#" 
						i.fa.fa-download.fa-2x
			.panel-body
				table.table.table-striped.table-bordered.bootstrap-datatable.datatable
					thead
						tr
							th Name
							th Username
							th Staff Category
							th Status
							th Valid Till
							th Staff staff_category
							th Role
							th Actions
					tbody
						- @users.each  do |user|
							tr
								td = user.try(:full_name)
								td = user.username
								td = user.staff_category.try(:name)
								td = user.validity_status
								td = user.valid_duration.try(:strftime ,"%d-%m-%y" )
								td = user.staff_category.try(:name)
								td
									table class="table.table-striped.table-condensed" 
										thead
											tr
												th Role
												th Store
											tbody.user
												- user.roles.each do |role|
													tr
														td = role.try(:name)
														td = role.resource.try(:name)
								td
									a.btn.btn-info href="#{edit_user_path(user)}"
										i.fa.fa-edit
									a.btn.btn-danger data-confirm=("Are you sure want to delete?") data-method="delete" href=("#{user_path(user)}") 
										i.fa.fa-trash-o