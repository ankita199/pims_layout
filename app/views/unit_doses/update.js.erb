var application = $('#application-main-body');

<% if @error.present? %>

var newErrorNotify = $("<%=j render 'notifies/notify', msg: @error %>");
application.find('#application-main-body-yield').prepend(newErrorNotify);
newErrorNotify.notifyRemove();

<% else %>

$(".unit-dose-edit-form[data-id='<%= @unit_dose.id %>']").replaceWith('<%=j render @unit_dose %>');
var newSuccessNotify = $("<%=j render 'notifies/notify', msg: "#{@unit_dose.name} "  + "record has been updated" %>");
application.find('#application-main-body-yield').prepend(newSuccessNotify);
newSuccessNotify.notifyRemove();

<%end%>