<div class="row">		
	<div class="col-lg-12">
		<div class="panel panel-default">
			<div class="panel-heading">
				Vendors
				<div class="panel-actions">
					<a href="#" data-toggle="modal" data-target="#vendor_modal_"><i class="fa fa-plus fa-2x"></i></a><%= render 'form', :vendor => Vendor.new  %>
					<a href="<%= vendors_path(:format => "xlsx") %>"><i class="fa fa-download fa-2x"></i></a>
					<a href="#" class="btn-minimize"><i class="fa fa-chevron-up fa-2x"></i></a>
				</div>				
			</div>
			<div class="panel-body">
				<table class="table table-striped table-bordered bootstrap-datatable datatable">
				  <thead>
					  <tr>
						  <th>Name</th>
						  <th>Reg No</th>
						  <th>Address</th>
						  <th>Contact Name</th>
						  <th>Contact Mobile</th>
						  <th>Contact Email</th>
						  <th>Vendor Category</th>
						  <th>Vendor Store Name</th>
						  <th>Actions</th>
					  </tr>
				  </thead>   
				  <tbody>
				  	<% @vendors.each  do |vendor| %>
							<tr>
								<td><%= vendor.try(:name) %></td>
								<td><%= vendor.try(:reg_number) %></td>
								<td><%= vendor.address %></td>
								<td><%= vendor.contact_name %></td>
								<td><%= vendor.contact_mobile %></td>
								<td><%= vendor.contact_email %></td>
								<td><%= vendor.vendor_category.try(:name) %></td>
								<td><%= vendor.store.try(:name) %></td>
								<td>
									<a href="#" data-toggle="modal" data-target="#vendor_modal_<%= vendor.id %>" class="btn btn-info"><i class="fa fa-edit"></i></a>
									<a class="btn btn-danger" href="<%= vendor_path(vendor) %>"  data-method="delete" data-confirm="Are you sure want to delete?">
										<i class="fa fa-trash-o "></i> 
									</a>
								</td>
							</tr>
							<%= render "form", :vendor => vendor %>
						<% end %>
				  </tbody>
			  </table>            
			</div>
		</div>
	</div>
</div>