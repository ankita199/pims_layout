.col-md-12
  .modal.fade.custom-width id=("item_class_modal_#{item_class.id}") 
  .modal-dialog
    .modal-content
    .modal-header
      button.close aria-hidden="true" data-dismiss="modal" type="button"  &times;
      h4.modal-title Drug Classification
    .modal-body
      = bootstrap_nested_form_for(item_class, :class => "form-horizontal form-groups-bordered", :remote => true) do |f|
        .errors
        .col-sm-12
          = f.text_field :name
          = f.text_field :description
          - f.fields_for :sub_classes do |ff|
            .panel.panel-warning
              .panel-heading
                | Sub Classification
              .panel-body
                = ff.text_field :name,label:"Sub Classification"
                = ff.text_area :description
                = ff.link_to_remove "Remove Sub Classification", :class => "btn btn-mini btn-danger"
          = f.link_to_add 'Add Sub Classification',:sub_classes, class: 'btn btn-mini btn-info'
          = submit_button_tag(f.object)