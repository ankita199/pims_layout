.row
	.col-lg-12
		.panel.panel-default
			.panel-heading
				| Stores
				.panel-actions
					a data-target="#store_modal_" data-toggle="modal" href="#" 
						i.fa.fa-plus.fa-2x
					a href="#" 
						i.fa.fa-download.fa-2x
			
			.panel-body
				table.table.table-striped.table-bordered.bootstrap-datatable.datatable
					thead
						tr
							th Store Name
							th Category
							th Parent Store
							th Operation Mode
							th Roles
							th Actions
					tbody
						= render 'form', :store => Store.new
						- @stores.each  do |store|
							tr
								td = store.try(:name)
								td = store.store_type.try(:name)
								td = store.parent.try(:name)
								td = store.store_operation.try(:name)
								td
									a.link-roles href ='#' = "#{store.roles.count}"
									table class="table.table-striped.table-condensed" 
										thead
											tr
												th Name
										tbody.store
											- store.roles.each do |role|
												tr
													td = role.try(:name)
								td
									a.btn.btn-info data-target=("#store_modal_#{store.id}") data-toggle="modal" href="#" 
										i.fa.fa-edit
									a.btn.btn-danger data-confirm=("Are you sure want to delete?") data-method="delete" href=("#{store_path(store)}") 
										i.fa.fa-trash-o
									= render "form", :store => store